    <form id="viImage">
        <div class="row mb-3">
          <div class="col-sm-2">
            <a href="#" class="btn btn-primary"><i class="fa fa-level-up-alt m-1" title="parent"></i></a>
            <button type="button" title="refresh" class="btn btn-primary"><i class="fa fa-sync"></i></button>
