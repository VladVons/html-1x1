<div class="container mt-3 vBgMaster">
  <h2>Edit Product</h2>
  
    <form id="viUndoForm">
        <div class="mb-3">
            <input class="form-check-input" type="checkbox" id="exampleCheckbox" checked>
            <label>Enable</label>
        </div>

        <div class="mb-3">
            <label>Category</label>
            <div class="d-flex">
                <h5 class="mt-1">Computers</h5>
                <ul class="navbar-nav mx-2" title="categories">
                    <li class="nav-item dropdown" id="viMainNavbar2">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" onclick="navbarCategoryClick()" href="#"><i class="fa fa-bars" style="font-size: 1.5em;"></i></a>
                        <ul class="dropdown-menu" id="viMainNavbarItems">
                            <li><a class="dropdown-item" href="#">item1 </a></li>
                            <li><a class="dropdown-item" href="#">item2 </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-11">
              <label>Name</label>
              <input type="text" class="form-control" id="Name" placeholder="product name" value="Dell optiplex 7010">
            </div>
              <div class="col">
                <label>Code</label>
              </div>
        </div>

        <div class="mb-3">
          <label>Description</label>
          <textarea class="form-control" name="description" rows="3" placeholder="product description"></textarea>
        </div>
        
        <div class="row mb-3">
          <div class="col">
            <label>Sale price</label>
            <input type="number" class="form-control" name="sale_price" placeholder="Enter sale price" value="123.4" min="0" step="0.1">
          </div>
          <div class="col">
            <label>Incoming Price</label>
            <input type="number" class="form-control" name="income_price" placeholder="Enter income price" value="100" min="0">
          </div>
          <div class="col">
            <label>Margin</label>
            <input class="form-control" value="12%" readonly>
          </div>
        </div>
        
        <div class="mb-3">
          <label for="Quantity" class="form-label">Quantity</label>
          <input type="number" class="form-control" id="Quantity" placeholder="Enter product quantity" min="0">
        </div>
        
        <div class="mb-3">
          <label for="Images" class="form-label">Images</label>
          <input type="file" class="form-control" id="Images" multiple>
        </div>
        
        <button type="submit" class="btn btn-primary">Save</button>
        <button class="btn btn-primary" id="viUndoBtn">Undo</button>
  </form>
  <script>
    const formChangeTracker = new TFormChangeTracker('viUndoForm', 'vChanged')

    const Btn = document.getElementById("viUndoBtn")
    Btn.addEventListener('click', formChangeTracker.undoChanges())
  </script>
</div>
